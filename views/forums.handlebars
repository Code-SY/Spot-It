
<link rel="stylesheet" href="../public/styles/bootstrap.min.css">
<link rel="stylesheet" href="../public/styles/homestyle.css">
<link rel="stylesheet" href="../public/styles/forum.css">
<style>
  body {
    background-color: black;
    color: white;
  }

  .jumbotron {
    background-color: #484848;
    color: white;
  }

  .btn {
    background-color: #066E35;
    color: white;
  }

  .card {
    background-color: #484848;
    color: white;
    margin-top: 2px;
  }
</style>

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="text-center">Forum List</h2>
        <a class="btn btn-light" href="/forum.html">New Forum</a>
        {{#each forum_data}}
        <div class="card text-center">
          <div class="card-header">
            <h3><b>{{name}}</b></h3>
          </div>
          <div class="card-body">
            <h5 class="card-title">{{description}}</h5>
            <p class="card-text">{{createdAt}}<br>{{updatedAt}}</p>
            <a href="/forums/{{name}}" class="btn btn-light">Forum Page</a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/forumcreate.js"></script>
<script src="js/forumcreate.js" type="text/javascript"></script>
<script src="js/jquery-1.11.3.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/ie10-viewport-bug-workaround.js"></script>
                    
     