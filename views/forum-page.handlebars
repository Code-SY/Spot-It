<link rel="stylesheet" href="../public/styles/bootstrap.min.css" type="text/css">
<link rel="stylesheet" href="../public/styles/homestyle.css" type="text/css">
<link rel="stylesheet" href="../public/styles/forum.css">
<style>
    body {
        background-color: black;
        color: white;
    }

    .jumbotron {
        background-color: #484848;
        color: white;
        margin-top:0%;
        padding-top: 20px;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
        margin-bottom: 10px;
    }

    .btn {
        background-color: #066E35;
        color: white;
    }

    .card {
        background-color: #484848;
        color: white;
        margin-top: 2px;
    }
</style>
<div id="home">
    <div class="container">
        <div class="jumbotron jumbotron-fluid text-center">
            <div class="container">
                <h1 class="display-4">{{forum_data.name}}</h1>
                <hr>
                <p class="lead">{{forum_data.description}}</p>
                <a class="btn btn-light" href="/api/forums/">Forum List</a>
            </div>
        </div>
        <div class="row">
            <div class="container">
                <div class="row mt-4">
                    <div class="col-md-2">
                        <a class="btn btn-light" id="formButton">New Post</a>
                    </div>
                </div>
                <form id="cms">
                    <div class="form-group">
                        <input type="text" id="forumid" value="{{forum_data.id}}" hidden>
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title">
                        <br />
                        <label for="body">Body:</label>
                        <textarea class="form-control" rows="10" id="body"></textarea>
                        <div class="form-group">
                            <label for="category">Select Category:</label>
                            <select class="custom-select" id="category">
                                <option value="Music Review">Music Review</option>
                                <option value="Similar Music">Similar Music</option>
                                <option value="Discussion">Discussion</option>
                            </select>
                        </div>
                        <br />
                        <button id="submit-button" type="submit">Submit</button>
                    </div>
                </form>
                <div class="row">
                    <div class="col-md-12 blog-container">
                        {{#each forum_data.Posts }}
                        <div class="card text-center">
                            <div class="card-header">
                                <h3><b>{{title}}</b></h3>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">{{body}}</h5>
                                <p class="card-text">{{createdAt}}<br>{{updatedAt}}</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js" type="text/javascript"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/blog.js" type="text/javascript"></script>
